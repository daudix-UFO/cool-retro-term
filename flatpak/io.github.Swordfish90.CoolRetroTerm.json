{
    "id": "io.github.Swordfish90.CoolRetroTerm",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "cool-retro-term",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--device=all",
        "--filesystem=host",
        "--share=network",
        "--share=ipc"
    ],
    "cleanup": [
        "/include",
        "/lib/qmake",
        "/lib/make",
        "/lib/pkgconfig"
    ],
    "modules": [
        {
            "name": "QMLTermWidget",
            "buildsystem": "simple",
            "build-commands" : [
            	"qmake",
            	"make",
            	"install -Dm755 qmltermwidget -t /app/bin"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Swordfish90/qmltermwidget.git",
                    "commit": "63228027e1f97c24abb907550b22ee91836929c5"
                }
            ]
        },
        {
            "name": "CoolRetroTerm",
            "build-commands" : [
            	"qmake",
            	"make",
            	"install -Dm755 cool-retro-term -t /app/bin"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Swordfish90/cool-retro-term.git",
                    "tag": "1.2.0"
                }
            ]
        }
    ]
}
