{
    "id": "io.github.Swordfish90.CoolRetroTerm",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-22.08",
    "sdk": "org.kde.Sdk",
    "command": "cool-retro-term",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup": [
        "/include",
        "/lib/qmake",
        "/lib/make",
        "/lib/pkgconfig"
    ],
    "modules": [
        {
            "name": "qmltermwidget",
            "buildsystem": "qmake",
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "post-install": [
                "mkdir -p /app/lib/qml",
                "ln -s /app/usr/lib/qml/QMLTermWidget /app/lib/qml",
                "ln -s /app/usr/lib/lib* /app/lib"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Swordfish90/qmltermwidget.git",
                    "commit": "63228027e1f97c24abb907550b22ee91836929c5"
                }
            ]
        },
        {
            "name": "CoolRetroTerm",
            "buildsystem": "qmake",
            "make-install-args": [
                "INSTALL_ROOT=/app"
            ],
            "post-install": [
                "install -Dm755 cool-retro-term -t /app/bin"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/Swordfish90/cool-retro-term.git",
                    "tag": "1.2.0"
                }
            ]
        },
        {
            "name": "Metadata",
            "buildsystem": "simple",
	    "build-commands": [
		"install -Dm644 ./packaging/appdata/cool-retro-term.appdata.xml /app/share/metainfo/io.github.Swordfish90.CoolRetroTerm.metainfo.xml",
		"install -Dm644 ./app/icons/256x256/cool-retro-term.png /app/share/icons/hicolor/256x256/apps/io.github.Swordfish90.CoolRetroTerm.png",
		"install -Dm644 cool-retro-term.desktop /app/share/applications/io.github.Swordfish90.CoolRetroTerm.desktop"
	    ]
	}
    ]
}
