{
    "id": "io.github.Swordfish90.CoolRetroTerm",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.4",
    "sdk": "org.kde.Sdk",
    "command": "cool-retro-term",
    "finish-args": [
        "--socket=x11",
        "--socket=wayland",
        "--device=all",
        "--filesystem=host",
        "--share=network",
        "--share=ipc",
        "--env=QML2_IMPORT_PATH=/app/lib/qt6/qml"
    ],
    "cleanup": [
        "/include",
        "/lib/qmake",
        "/lib/make",
        "/lib/pkgconfig"
    ],
    "modules": [
        {
            "name": "CoolRetroTerm",
            "buildsystem": "simple",
            "build-commands": [
                "qmake",
                "make"
            ],
            "sources": [
                {
                    "type" : "dir",
                    "path" : "../../."
                }
            ]
        }
    ]
}
